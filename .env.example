# API Service Warehouse Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Gateway Configuration
# =============================================================================
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Payment Services Authentication
# =============================================================================

# Stripe API
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# BAP (Biller Aggregation Portal) - Nigerian Payments
BAP_API_KEY=your_bap_api_key
BAP_SECRET=your_bap_secret_key
BAP_BASE_URL=https://api.bap.com
BAP_WEBHOOK_URL=https://your-domain.com/webhooks/bap

# Wise Multicurrency Account
WISE_API_TOKEN=your_wise_api_token
WISE_PROFILE_ID=your_wise_profile_id
WISE_BASE_URL=https://api.transferwise.com

# Xpress Wallet
XPRESS_WALLET_API_KEY=your_xpress_wallet_key
XPRESS_WALLET_SECRET=your_xpress_wallet_secret
XPRESS_WALLET_MERCHANT_ID=your_merchant_id

# Open Banking API
OPEN_BANKING_CLIENT_ID=your_open_banking_client_id
OPEN_BANKING_CLIENT_SECRET=your_open_banking_client_secret
OPEN_BANKING_BASE_URL=https://api.openbanking.com

# =============================================================================
# Infrastructure Services
# =============================================================================

# Hostinger API
HOSTINGER_API_KEY=your_hostinger_api_key
HOSTINGER_BASE_URL=https://api.hostinger.com

# ngrok API
NGROK_API_KEY=your_ngrok_api_key
NGROK_AUTH_TOKEN=your_ngrok_auth_token
NGROK_BASE_URL=https://api.ngrok.com

# =============================================================================
# Media & Content Services
# =============================================================================

# Shutterstock API
SHUTTERSTOCK_CLIENT_ID=your_shutterstock_client_id
SHUTTERSTOCK_CLIENT_SECRET=your_shutterstock_client_secret
SHUTTERSTOCK_BASE_URL=https://api.shutterstock.com

# =============================================================================
# Analytics Services
# =============================================================================

# Google Analytics API
GOOGLE_ANALYTICS_CLIENT_ID=your_google_client_id
GOOGLE_ANALYTICS_CLIENT_SECRET=your_google_client_secret
GOOGLE_ANALYTICS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ANALYTICS_VIEW_ID=your_view_id

# =============================================================================
# Additional Services
# =============================================================================

# SaySwitch API
SAYSWITCH_API_KEY=your_sayswitch_api_key
SAYSWITCH_SECRET=your_sayswitch_secret

# EDoc Integration
EDOC_API_KEY=your_edoc_api_key
EDOC_BASE_URL=https://api.edoc.com

# Business API
BUSINESS_API_KEY=your_business_api_key
BUSINESS_API_SECRET=your_business_secret

# Merchant API
MERCHANT_API_KEY=your_merchant_api_key
MERCHANT_API_SECRET=your_merchant_secret

# Multi Currency Account
MCA_API_TOKEN=your_mca_token
MCA_ACCOUNT_ID=your_mca_account_id

# Seftec Payment Collection
SEFTEC_API_KEY=your_seftec_api_key
SEFTEC_MERCHANT_ID=your_seftec_merchant_id

# =============================================================================
# Database & Cache Configuration (if needed)
# =============================================================================

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# MongoDB (for logging and analytics)
MONGODB_URL=mongodb://localhost:27017/api-warehouse
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# Webhook Configuration
# =============================================================================

# Base webhook URL for your application
WEBHOOK_BASE_URL=https://your-domain.com/webhooks

# Webhook secrets for verification
WEBHOOK_SECRET_STRIPE=whsec_your_stripe_webhook_secret
WEBHOOK_SECRET_BAP=your_bap_webhook_secret
WEBHOOK_SECRET_WISE=your_wise_webhook_secret

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Monitoring endpoints
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
METRICS_COLLECTION_INTERVAL=60000  # 1 minute

# External monitoring services
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key

# =============================================================================
# Development & Testing
# =============================================================================

# Test environment settings
TEST_TIMEOUT=30000
TEST_RETRIES=3

# Mock service endpoints for testing
MOCK_SERVICES_ENABLED=false
MOCK_BASE_URL=http://localhost:3001

# =============================================================================
# Production Overrides
# =============================================================================

# Production-specific settings (uncomment for production)
# NODE_ENV=production
# PORT=8080
# LOG_LEVEL=warn
# RATE_LIMIT_MAX_REQUESTS=1000
