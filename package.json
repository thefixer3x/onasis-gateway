{
  "name": "@core/api-adapters",
  "version": "1.0.0",
  "description": "MCP service adapters generated from Postman collections",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "bun run bun-neon-server.ts",
    "dev": "bun --watch bun-neon-server.ts",
    "node-start": "node server.js",
    "generate-adapters": "bun run scripts/generate-adapters.js",
    "health-check": "bun run scripts/health-check.js",
    "deploy": "./scripts/deploy.sh",
    "db:setup": "bun run scripts/setup-neon-db.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist && rm -rf src/adapters/generated",
    "registry:build": "bun run src/generators/registry-generator.ts",
    "health": "bun run src/utils/health-check.ts",
    "postbuild": "bun run registry:build"
  },
  "keywords": [
    "api",
    "integration",
    "microservices",
    "mcp",
    "postman",
    "webhook",
    "payment",
    "fintech"
  ],
  "author": "API Integration Team",
  "license": "MIT",
  "dependencies": {
    "@netlify/functions": "^4.1.11",
    "@vercel/node": "^5.3.6",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "redis": "^4.6.10",
    "semver": "^7.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/axios": "^0.14.0",
    "bun-types": "latest",
    "typescript": "^5.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/api-service-warehouse.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/api-service-warehouse/issues"
  },
  "homepage": "https://github.com/your-org/api-service-warehouse#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-unused-vars": "error"
    }
  }
}
