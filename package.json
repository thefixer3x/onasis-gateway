{
  "name": "onasis-gateway",
  "version": "1.0.0",
  "description": "MCP service adapters generated from Postman collections",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node unified_gateway.js",
    "start:unified": "node unified_gateway.js",
    "start:api": "node api_server.js",
    "start:mcp": "node mcp_server.js",
    "start:railway": "node unified_gateway.js",
    "start:bun": "bun run bun-neon-server.ts",
    "dev": "bun --watch bun-neon-server.ts",
    "generate-adapters": "bun run scripts/generate-adapters.js",
    "sync:deployed-functions": "node scripts/sync-deployed-functions.js",
    "preflight": "node scripts/preflight.js",
    "health-check": "bun run scripts/health-check.js",
    "deploy": "./scripts/deploy.sh",
    "db:setup": "bun run scripts/setup-neon-db.ts",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist && rm -rf src/adapters/generated",
    "registry:build": "bun run src/generators/registry-generator.ts",
    "health": "bun run src/utils/health-check.ts",
    "postbuild": "bun run registry:build"
  },
  "keywords": [
    "microservices",
    "mcp",
    "postman",
    "webhook",
    "payment",
    "fintech"
  ],
  "author": "API Integration Team",
  "license": "MIT",
  "dependencies": {
    "@genkit-ai/mcp": "^1.28.0",
    "@netlify/functions": "^5.1.2",
    "@supabase/supabase-js": "^2.96.0",
    "@types/pg": "^8.16.0",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "eventsource": "^4.1.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.23",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "pg": "^8.18.0",
    "playwright": "^1.58.2",
    "prom-client": "^15.1.3",
    "redis": "^5.11.0",
    "semver": "^7.7.4",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "bun-types": "^1.3.9",
    "diff": "8.0.3",
    "eslint": "^10.0.0",
    "form-data": "4.0.5",
    "glob": "10.5.0",
    "jest": "^30.2.0",
    "js-yaml": "4.1.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "ts-node": {
      "diff": "4.0.4"
    },
    "@istanbuljs/load-nyc-config": {
      "js-yaml": "3.14.2"
    },
    "axios": {
      "form-data": "4.0.5"
    },
    "bull": {
      "lodash": "4.17.23"
    },
    "fast-xml-parser": "^5.3.6",
    "glob": "10.5.0",
    "qs": "^6.14.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/api-service-warehouse.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/api-service-warehouse/issues"
  },
  "homepage": "https://github.com/your-org/api-service-warehouse#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
